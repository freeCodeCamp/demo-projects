ul.list-group
  each book in request.gives
    li.list-group-item
      .row
        - const checked = (selectedGives || []).includes(book.id)
        input.col-xs-2(class='takes' checked=checked type='checkbox' id=`give${book.id}` name=`give${book.id}`)
        label.col-xs-10(for=`give${book.id}`)
          +requestsBadge(book)
          h4.list-group-item-heading= book.name
          p.list-group-item-text= book.description
          p.text-muted.small
            = 'from '
            +userLink(book.owner)
            = ` in ${book.owner.city}`
