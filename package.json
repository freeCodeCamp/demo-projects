{
  "name": "@freecodecamp/demo-projects",
  "version": "0.0.0",
  "engines": {
    "node": "16.17.1",
    "npm": "8.19.2"
  },
  "description": "Example projects for the freeCodeCamp.org curriculum",
  "scripts": {
    "lint": "eslint --max-warnings 0 .",
    "start": "pm2 start ecosystem.config.js",
    "reload": "pm2 reload ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "delete": "pm2 delete ecosystem.config.js",
    "update-and-reload-twitch-proxy": "pm2 start scripts/twitch-proxy/updateApiKey.mjs --no-autorestart --cron \"0 0 1 * *\" && npm run reload -- --only twitch-proxy",
    "test": "echo 'The test suite is meant to run locally or in a CI environment. \u001b[31mDo NOT run this in production.\u001b[37m If you intend to run the tests, use \"npm run test-local-or-ci\".'",
    "pretest-local-or-ci": "node test/pretest.js",
    "test-local-or-ci": "npm-run-all -s test:*",
    "test:config": "jest --rootDir=test",
    "test:startup": "node test-server-starts.js",
    "test:package-tests": "node test-packages.js"
  },
  "devDependencies": {
    "concurrently": "7.4.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.0",
    "eslint-plugin-react": "7.31.8",
    "jest": "27.5.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "wait-port": "0.3.1"
  },
  "dependencies": {
    "dotenv": "14.3.2",
    "node-fetch": "3.2.10"
  },
  "workspaces": [
    "apps/american-british-translator",
    "apps/anonymous-message-board",
    "apps/bar-chart",
    "apps/build-a-pinterest-clone",
    "apps/chart-the-stock-market",
    "apps/choropleth-map",
    "apps/exercise-tracker",
    "apps/file-metadata-microservice",
    "apps/forum-proxy",
    "apps/heat-map",
    "apps/image-search-abstraction-layer",
    "apps/issue-tracker",
    "apps/manage-a-book-trading-club",
    "apps/metric-imperial-converter",
    "apps/p2p-video-chat-application",
    "apps/personal-library",
    "apps/personal-portfolio",
    "apps/product-landing-page",
    "apps/request-header-parser-microservice",
    "apps/secure-real-time-multiplayer-game",
    "apps/scatterplot-graph",
    "apps/stock-price-checker",
    "apps/stock-price-checker-proxy",
    "apps/sudoku-solver",
    "apps/survey-form",
    "apps/technical-documentation-page",
    "apps/timestamp-microservice",
    "apps/treemap-diagram",
    "apps/tribute-page",
    "apps/twitch-proxy",
    "apps/url-shortener-microservice",
    "apps/voting-app",
    "apps/weather-proxy"
  ]
}
