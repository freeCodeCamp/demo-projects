{
  "name": "@freecodecamp/demo-projects",
  "version": "0.0.0",
  "engines": {
    "node": "16.17.1",
    "npm": "8.19.2"
  },
  "description": "Example projects for the freeCodeCamp.org curriculum",
  "scripts": {
    "lint": "eslint apps --max-warnings 0",
    "start": "pm2 start ecosystem.config.js",
    "reload": "pm2 reload ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "delete": "pm2 delete ecosystem.config.js",
    "update-and-reload-twitch-proxy": "pm2 start scripts/twitch-proxy/updateApiKey.mjs --no-autorestart --cron \"0 0 1 * *\" && npm run reload -- --only twitch-proxy",
    "test": "echo 'The test suite is meant to run locally or in a CI environment. \u001b[31mDo NOT run this in production.\u001b[37m If you intend to run the tests, use \"npm run test-local-or-ci\".'",
    "test-local-or-ci": "npm-run-all -s test:*",
    "test:config": "jest --rootDir=test",
    "test:american-british-translator": "cd apps/american-british-translator && npm run test",
    "test:anonymous-message-board": "cd apps/anonymous-message-board && cp sample.env .env && npm run test",
    "test:exercise-tracker": "cd apps/exercise-tracker && cp sample.env .env && npm run test",
    "test:file-metadata-microservice": "cd apps/file-metadata-microservice && npm run test",
    "test:forum-proxy": "cd apps/forum-proxy && npm run test",
    "test:issue-tracker": "cd apps/issue-tracker && cp sample.env .env && npm run test",
    "test:manage-a-book-trading-club": "cd apps/manage-a-book-trading-club && cp sample.env .env && npm run test",
    "test:metric-imperial-converter": "cd apps/metric-imperial-converter && npm run test",
    "test:personal-library": "cd apps/personal-library && cp sample.env .env && npm run test",
    "test:request-header-parser-microservice": "cd apps/request-header-parser-microservice && npm run test",
    "test:secure-real-time-multiplayer-game": "cd apps/secure-real-time-multiplayer-game && npm run test",
    "test:stock-price-checker": "cd apps/stock-price-checker && cp sample.env .env && npm run test",
    "test:sudoku-solver": "cd apps/sudoku-solver && npm run test",
    "test:timestamp-microservice": "cd apps/timestamp-microservice && npm run test",
    "test:url-shortener-microservice": "cd apps/url-shortener-microservice && cp sample.env .env && npm run test",
    "__comment": "These don't currently have actual tests, but will assert the server starts.",
    "pretest:build-a-pinterest-clone": "cd apps/build-a-pinterest-clone && cp sample.env .env",
    "test:build-a-pinterest-clone": "node test-server-starts.js apps/build-a-pinterest-clone",
    "test:chart-the-stock-market": "node test-server-starts.js apps/chart-the-stock-market",
    "pretest:image-search-abstraction-layer": "cd apps/image-search-abstraction-layer && cp sample.env .env",
    "test:image-search-abstraction-layer": "node test-server-starts.js apps/image-search-abstraction-layer",
    "test:p2p-video-chat-application": "node test-server-starts.js apps/p2p-video-chat-application",
    "pretest:voting-app": "cd apps/voting-app && cp sample.env .env",
    "test:voting-app": "node test-server-starts.js apps/voting-app",
    "test:tribute-page": "node test-server-starts.js apps/tribute-page",
    "test:survey-form": "node test-server-starts.js apps/survey-form",
    "test:product-landing-page": "node test-server-starts.js apps/product-landing-page",
    "test:technical-documentation-page": "node test-server-starts.js apps/technical-documentation-page",
    "test:bar-chart": "node test-server-starts.js apps/bar-chart",
    "test:scatterplot-graph": "node test-server-starts.js apps/scatterplot-graph",
    "test:heat-map": "node test-server-starts.js apps/heat-map",
    "test:choropleth-map": "node test-server-starts.js apps/choropleth-map",
    "test:treemap-diagram": "node test-server-starts.js apps/treemap-diagram",
    "test:random-quote-machine": "node test-server-starts.js apps/random-quote-machine"
  },
  "devDependencies": {
    "concurrently": "7.4.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-react": "7.31.8",
    "jest": "27.5.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "wait-port": "0.3.1"
  },
  "dependencies": {
    "dotenv": "14.3.2",
    "node-fetch": "3.2.10"
  },
  "workspaces": [
    "apps/american-british-translator",
    "apps/anonymous-message-board",
    "apps/bar-chart",
    "apps/build-a-pinterest-clone",
    "apps/chart-the-stock-market",
    "apps/choropleth-map",
    "apps/exercise-tracker",
    "apps/file-metadata-microservice",
    "apps/forum-proxy",
    "apps/heat-map",
    "apps/image-search-abstraction-layer",
    "apps/issue-tracker",
    "apps/manage-a-book-trading-club",
    "apps/metric-imperial-converter",
    "apps/p2p-video-chat-application",
    "apps/personal-library",
    "apps/personal-portfolio",
    "apps/product-landing-page",
    "apps/random-quote-machine",
    "apps/request-header-parser-microservice",
    "apps/secure-real-time-multiplayer-game",
    "apps/scatterplot-graph",
    "apps/stock-price-checker",
    "apps/stock-price-checker-proxy",
    "apps/sudoku-solver",
    "apps/survey-form",
    "apps/technical-documentation-page",
    "apps/timestamp-microservice",
    "apps/treemap-diagram",
    "apps/tribute-page",
    "apps/twitch-proxy",
    "apps/url-shortener-microservice",
    "apps/voting-app",
    "apps/weather-proxy"
  ]
}
